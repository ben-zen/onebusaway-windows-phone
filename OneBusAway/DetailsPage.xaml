<Page
    x:Class="OneBusAway.View.StopDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:bus="using:OneBusAway.Model.BusServiceDataStructures"
    mc:Ignorable="d">
  <Page.Resources>

    <!-- TextBox styles -->

    <DataTemplate x:Key="RouteTemplate" x:DataType="bus:ArrivalAndDeparture">
      <Grid Margin="8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="80" />
          <ColumnDefinition Width="140" />
          <ColumnDefinition Width="135" />
          <ColumnDefinition Width="105" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="26" />
          <RowDefinition Height="24" />
        </Grid.RowDefinitions>

        <TextBlock 
                    Grid.Column="0" 
                    Grid.Row="0" 
                    Grid.RowSpan="2" 
                    Text="{x:Bind routeShortName}" 
                    FontSize="{ThemeResource TextStyleLargeFontSize}" 
                    VerticalAlignment="Top"
                    Margin="0,-3,5,0"
                    />
        <TextBlock Grid.Column="1" 
                   Grid.ColumnSpan="2" 
                   Grid.Row="0"     
                   TextAlignment="Left"
                   Text="{x:Bind tripHeadsign}" />
        <TextBlock Grid.Column="1" 
                   Grid.Row="1" 
                   Text="{x:Bind scheduledDepartureTime, Converter={StaticResource DateTimeConverter}, ConverterParameter=Sched:}" />
        <TextBlock Grid.Column="2" 
                   Grid.Row="1" 
                   TextAlignment="Right"
                   HorizontalAlignment="Stretch"
                   Text="{x:Bind busDelay, Mode=OneWay, Converter={StaticResource LateEarlyConverter}}" 
                   Foreground="{x:Bind busDelay, Mode=OneWay, Converter={StaticResource DelayColorConverter}}" />
        <TextBlock Grid.Column="3" 
                   Grid.Row="0" 
                   Grid.RowSpan="2" 
                   TextAlignment="Right" 
                   VerticalAlignment="Top" 
                   Margin="0,-3,0,0"
                   Text="{x:Bind nextKnownDeparture, Converter={StaticResource DateTimeDeltaConverter}}" 
                   Foreground="{Binding Converter={StaticResource DelayColorConverter}}" />
      </Grid>
    </DataTemplate>

    <Style x:Key="BusStopLargePushpinStyle" TargetType="maps:MapIcon">
    </Style>
  </Page.Resources>

  <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="2*"/>
      <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" x:Name="TitleGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <TextBlock x:Name="RouteNumber" 
                 Text="" 
                 FontSize="48" 
                 Margin="10,0,10,0"
                 Grid.Column="0"
                 Grid.Row="0"
                 Grid.RowSpan="2" />

      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="1*" />
          <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   x:Name="RouteName"
                   Text="{Binding Path=CurrentViewState.CurrentRouteDirection.name}" />
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   x:Name="RouteInfo"
                   Text="{Binding Path=CurrentViewState.CurrentStop.name}" />
      </Grid>
    </Grid>

    <Grid Grid.Row="1" x:Name="ContentGrid">
      <maps:MapControl x:Name="DetailsMap"
                             WatermarkMode="Automatic"
                             ZoomInteractionMode="Auto"
                             ZoomLevel="10">
        <!--<maps:MapItemsControl x:Name="RouteLineControl" ItemsSource="{Binding Path=CurrentViewState.CurrentRouteDirection, Converter={StaticResource PolylineConverter}}">
          <maps:MapItemsControl.ItemTemplate>
            <DataTemplate>
              <maps:MapPolyline Path="{Binding}"
                                StrokeThickness="5" />
            </DataTemplate>
          </maps:MapItemsControl.ItemTemplate>
        </maps:MapItemsControl>
        <maps:MapItemsControl x:Name="BusTripsItemsControl" ItemsSource="{x:Bind VM.ArrivalsForStop, Mode=OneWay}">
          <maps:MapItemsControl.ItemTemplate>
            <DataTemplate>
              <maps:MapIcon Location="{Binding tripDetails.location}" 
                            NormalizedAnchorPoint="0.5,0.5" />
            </DataTemplate>
          </maps:MapItemsControl.ItemTemplate>
        </maps:MapItemsControl>
        <maps:MapItemsControl x:Name="BusStopItemsControl" ItemsSource="{Binding Path=CurrentViewState.CurrentRouteDirection.stops}">
          <maps:MapItemsControl.ItemTemplate>
            <DataTemplate>
              <maps:MapIcon Location="{Binding location}" 
                            NormalizedAnchorPoint="0.5,0.5" />
            </DataTemplate>
          </maps:MapItemsControl.ItemTemplate>
        </maps:MapItemsControl>
        <maps:MapIcon x:Name="StopPushpin" Location="{Binding Path=CurrentViewState.CurrentStop.location}" NormalizedAnchorPoint="0,1"/>
        <maps:MapIcon Location="{Binding Path=LocationTracker.CurrentLocationSafe, Source={StaticResource ViewModel}}" NormalizedAnchorPoint="0.5,0.5" />-->
      </maps:MapControl>
    </Grid>
    <Grid Grid.Row="2" x:Name="StopGrid">

      <ListBox 
                x:Name="ArrivalsListBox" 
                ItemsSource="{x:Bind VM.ArrivalsForStop, Mode=OneWay}" 
                ItemTemplate="{StaticResource RouteTemplate}" 
                SelectionChanged="ArrivalsListBox_SelectionChanged" />
      <TextBlock x:Name="NoResultsTextBlock" Text="no results" 
                       VerticalAlignment="Top"
                       Margin="12" 
                 Visibility="Collapsed"
                       />
      <!-- Visibility="{Binding Path=NoResultsAvailable, Source={StaticResource ViewModel}, Converter={StaticResource VisibilityConverter}}"-->
    </Grid>

  </Grid>

  <Page.BottomAppBar>
    <CommandBar>
      <AppBarButton x:Name="appbar_filter" Icon="Filter" Label="Filter" /> <!-- Click="appbar_allroutes_click" /> -->
      <AppBarButton x:Name="appbar_favorite" Icon="Favorite"  Label="Add Favorite" Click="appbar_favorite_Click" />
      <AppBarButton x:Name="appbar_refresh" Icon="Refresh" Label="Refresh" Click="appbar_refresh_Click" />
    </CommandBar>
  </Page.BottomAppBar>
</Page>
