<Page
    x:Class="OneBusAway.View.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignHeight="768" d:DesignWidth="480">

  <!--LayoutRoot is the root grid where all page content is placed-->
  <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Image 
      HorizontalAlignment="Center"  
      Stretch="None" 
      VerticalAlignment="Top" 
      Source="/SplashImage.png" />
    <HyperlinkButton 
            Content="send feedback" 
            Height="72" 
            HorizontalAlignment="Left" 
            Margin="121,520,0,0" 
            Name="FeedbackButton" 
            VerticalAlignment="Top" 
            Width="236"
            NavigateUri="mailto:wp7@onebusaway.org?subject=OneBusAway%20for%20Windows%20Phone"
            />
    <HyperlinkButton 
            Height="73" 
            HorizontalAlignment="Left" 
            Margin="63,374,0,0" 
            Name="AddressBlock" 
            NavigateUri="https://onebusaway.org" 
            VerticalAlignment="Top" 
            FontSize="48" 
            Width="350"
            />
    <StackPanel VerticalAlignment="Bottom">
      <TextBlock
                HorizontalAlignment="Stretch"
                TextAlignment="Center"
                Text=
                "Windows Phone app by Rob Smith, Shawn Henry, Michael Friedman, and David Robinson" 
                TextWrapping="Wrap"
                Margin="10,10,10,0"
                />
      <HyperlinkButton 
                HorizontalAlignment="Center" 
              Content="Github Project Page"
                NavigateUri="https://github.com/OneBusAway/onebusaway-windows-phone" 
				FontSize="15.5"
                Margin="10"
                />
    </StackPanel>
    <TextBlock 
          Height="30"
          HorizontalAlignment="Right"
          Margin="0,10,14,0"
          Name="VersionTextBlock"
          Text="Version 1.0"
          VerticalAlignment="Top" />
  </Grid>

